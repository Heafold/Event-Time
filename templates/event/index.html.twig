{% extends 'base.html.twig' %}


{% block body %}
	<div class="mx-auto mt-5" style="width: 300px;">
		<div class="input-group">
			<input type="search" class="form-control rounded" placeholder="Rechercher" aria-label="Search" aria-describedby="search-addon"/>
			<button type="button" class="btn btn-outline-primary">Rechercher</button>
		</div>
	</div>

	<div class="mx-auto mt-5" style="width: 1000px;">
		<h1 class="text-center">Evénements ✅</h1>
		<div class="d-flex justify-content-around flex-wrap">
			{% for event in events %}
				<div class="card mt-5" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">{{ event.name }}</h5>
						<p class="card-text">{{ event.description }}</p>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>


{% endblock %}
